# Forzar LF en mvnw dentro del hello_world
hello_world/mvnw text eol=lf

# Forzar CRLF en archivos .cmd dentro del hello_world
hello_world/*.cmd text eol=crlf

# Atttibutes específicos dentro de "crud-api-app/"

# Fuerza el uso de LF y evita que Git lo modifique
* text=auto eol=lf

# Archivos de código
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf

# Archivos de configuración
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.env  text eol=lf

# Binarios y fuentes
*.png  binary
*.jpg  binary
*.ttf  binary
*.otf  binary
*.woff binary
*.woff2 binary
